
@{
    ViewData["Title"] = "Login";
}

<div class="container login">
    
    <div class="login-title">
        <strong>OSS.Core</strong>
    </div>

    <div class="col-xs-12 col-md-6 login-body">
        <div class="title">
            <strong>
                登 &nbsp;&nbsp; 录
            </strong>
        </div>
        <form id="login-form">
            <div class="form-group">
                
                <input type="text" class="form-control" 
                       v-model="name" name="name"
                       data-vv-as="账号信息"  v-validate="'required|emailandphone'"
                       placeholder="请输入手机/邮箱" />

                <p class="text-danger" style="display: none" v-show="errors.has('name')">{{ errors.first('name') }}</p>
            </div>
            <div class="form-group">
                
                <input type="text" class="form-control"
                       v-model="pass_code" name="pass_code"
                       data-vv-as="密码" v-validate="'truthy|required'"
                       placeholder="请输入用户密码"/>

                <p class="text-danger" style="display: none" v-show="errors.has('pass_code')">{{ errors.first('pass_code') }}</p>
            </div>
            <div class="col-md-8 login-btn">
                <span>
                    <a>忘记密码</a>
                </span>
                <span>|</span>
                <span>
                    <button type="button" @@click="submit" class="btn  btn-success">登录</button>
                </span>
            </div>
        </form>      
    </div>
    <div class="col-xs-12 col-md-6 login-footer">
        <div>第三方登录</div>
        <div class="thirds">
            <span>微信</span>
        </div>
    </div>
</div>
